{
  "name": "@merajsahebdar/workshop-node-todo",
  "version": "0.1.0",
  "description": "Workshop - GraphQL Todo API Powered by Node",
  "main": "src/app/index.ts",
  "repository": "https://github.com/merajsahebdar/workshop-node-todo",
  "author": "Meraj Sahebdar",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "dotenv -e .env -- nodemon --watch src -e ts -x ts-node src/app/index.ts",
    "data:orm": "dotenv -e .env -- ts-node node_modules/.bin/typeorm",
    "data:schema:generate": "ts-node src/generateSchema.ts",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx . && prettier --write ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "resolutions": {
    "type-graphql/@types/node": "^14.0.0"
  },
  "dependencies": {
    "@types/clear": "^0.1.1",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "apollo-server-express": "^2.19.1",
    "apollo-server-fastify": "^2.19.1",
    "chalk": "^4.1.0",
    "class-validator": "^0.12.2",
    "clear": "^0.1.0",
    "cors": "^2.8.5",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.16.0",
    "express": "^4.17.1",
    "fastify": "^3.9.2",
    "fastify-cors": "^5.1.0",
    "graphql": "^14.0.0",
    "graphql-fields-list": "^2.2.1",
    "graphql-query-complexity": "^0.7.2",
    "graphql-subscriptions": "^1.1.0",
    "mysql": "^2.18.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^9.1.1",
    "type-graphql": "^0.17.6",
    "type-graphql-filter": "^0.2.2",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.29",
    "typeorm-naming-strategies": "^2.0.0",
    "typeorm-typedi-extensions": "^0.2.3",
    "typescript": "^4.1.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3"
  }
}
